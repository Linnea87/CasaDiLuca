<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/home_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_design"
        android:orientation="vertical"
        android:gravity="top"
        tools:context=".HomeActivity">

    <!-- ===== HERO SECTION ==================================== -->
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_l"
            android:layout_marginBottom="@dimen/padding_m">

        <ImageView
                android:id="@+id/img_hero"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/img_hero_casa_di_luca"
                android:contentDescription="@string/desc_image" />

        <View
                android:id="@+id/img_hero_overlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/overlay_20" />

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@color/overlay_65"
                android:paddingHorizontal="@dimen/padding_m"
                android:paddingVertical="@dimen/padding_s"
                android:layout_margin="@dimen/margin_s">

            <TextView
                    android:id="@+id/text_hero_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/brand_title"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_xxl"
                    android:letterSpacing="0.08"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/margin_s" />

            <TextView
                    android:id="@+id/text_hero_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_tagline"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_s"
                    android:letterSpacing="0.03"
                    android:gravity="center" />
        </LinearLayout>
    </FrameLayout>

    <!-- ===== CATEGORY TITLE (shown when a category is selected) ===== -->
    <TextView
            android:id="@+id/menu_category_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/menu_starters"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_l"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_s"
            android:layout_marginBottom="@dimen/margin_s"
            android:visibility="gone" />

    <View
            android:id="@+id/menu_divider"
            android:layout_width="@dimen/width_m"
            android:layout_height="@dimen/stroke_s"
            android:layout_gravity="center"
            android:background="@color/stroke_accent"
            android:layout_marginBottom="@dimen/margin_m"
            android:visibility="gone" />

    <!-- ===== MENU LIST (RecyclerView) =============================== -->
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/menu_recycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="@dimen/padding_m"
            android:visibility="gone" />

    <!-- ===== BACK BUTTON ============================================ -->
    <Button
            android:id="@+id/btn_back"
            style="@style/BackBtnStyle"
            android:text="@string/btn_back"
            android:layout_gravity="center"
            android:visibility="gone" />

    <!-- ===== MENU SECTION =========================================== -->
    <LinearLayout
            android:id="@+id/menu_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
                android:id="@+id/menu_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/menu_title"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_l"
                android:letterSpacing="0.05"
                android:gravity="center"
                android:layout_marginTop="@dimen/margin_s"
                android:layout_marginBottom="@dimen/margin_s" />

        <View
                android:layout_width="@dimen/width_m"
                android:layout_height="@dimen/stroke_s"
                android:layout_gravity="center"
                android:background="@color/stroke_accent"
                android:layout_marginBottom="@dimen/margin_m" />

        <!-- ===== MENU BUTTONS ====================================== -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="@dimen/margin_s">

            <Button
                    android:id="@+id/btn_drinks"
                    style="@style/MenuBtnStyle"
                    android:text="@string/menu_drinks" />

            <Button
                    android:id="@+id/btn_starters"
                    style="@style/MenuBtnStyle"
                    android:text="@string/menu_starters" />

            <Button
                    android:id="@+id/btn_mains"
                    style="@style/MenuBtnStyle"
                    android:text="@string/menu_mains" />

            <Button
                    android:id="@+id/btn_desserts"
                    style="@style/MenuBtnStyle"
                    android:text="@string/menu_desserts" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>