<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ===== MENU BUTTON STYLE ================================ -->
    <style name="MenuBtnStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <!-- background -->
        <item name="android:background">@color/neutral_600</item>

        <!-- remove default tint -->
        <item name="backgroundTint">@null</item>

        <!-- outer margin -->
        <item name="android:layout_marginStart">@dimen/margin_m</item>
        <item name="android:layout_marginEnd">@dimen/margin_m</item>
        <item name="android:layout_marginBottom">@dimen/margin_s</item>

        <!-- inner padding -->
        <item name="android:paddingTop">@dimen/padding_s</item>
        <item name="android:paddingBottom">@dimen/padding_s</item>

        <!-- text -->
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/text_m</item>
    </style>

    <!-- ===== BACK BUTTON STYLE ================================ -->
    <style name="BackBtnStyle" parent="MenuBtnStyle">
        <item name="android:textSize">@dimen/text_s</item>
        <item name="android:paddingVertical">@dimen/padding_xs</item>
        <item name="android:layout_marginTop">@dimen/margin_s</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

</resources>