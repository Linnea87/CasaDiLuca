<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="rectangle">

    <!-- ===== BUTTON BACKGROUND GRADIENT ========================= -->
    <gradient
            android:startColor="@color/neutral_700"
            android:endColor="@color/neutral_500"
            android:angle="90" />

    <!-- ===== CORNERS ============================================ -->

    <corners android:radius="@dimen/radius_m" />

    <!-- ===== PADDING ============================================ -->

    <padding
            android:left="@dimen/margin_s"
            android:right="@dimen/margin_s"
            android:top="@dimen/margin_xs"
            android:bottom="@dimen/margin_xs" />

    <!-- ===== BORDER / STROKE =================================== -->

    <stroke
            android:width="@dimen/stroke_s"
            android:color="@color/stroke_40" />

</shape>